    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Implementation-Version>${Implementation-Version}</Implementation-Version>
                            <EM-Domain-Version>${em.version}</EM-Domain-Version>
                            <Infrastructure-Version>${infrastructure.version}</Infrastructure-Version>
                            <Infrastructure-XMPP-Version>${infrastructure.xmpp.version}</Infrastructure-XMPP-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <!-- attach the copy-resources goal to the deploy phase -->
            <!-- copy the deploy time configuration file to the target -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <!-- there has got to be a better way to get class files, rather than jar files,
                        into the war -->
                    <execution>
                        <id>copy-bin-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/src/main/webapp/WEB-INF/classes</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../processes/servlets/target/classes</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
